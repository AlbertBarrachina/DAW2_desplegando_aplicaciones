package proyecto;

public class muebles {

	private String color;
	private int altura, ancho, peso;

	// getters y setters
	// color
	public String getColor() {
		return color;
	}

	public void setColor(String color) {
		this.color = color;
	}

	// altura
	public int getAltura() {
		return altura;
	}

	public void setAltura(int altura) {
		this.altura = altura;
	}

	// ancho
	public int getAncho() {
		return ancho;
	}

	public void setAncho(int ancho) {
		this.ancho = ancho;
	}

	// peso
	public int getPeso() {
		return peso;
	}

	public void setPeso(int peso) {
		this.peso = peso;
	}

	// pesa el mueble
	public void pesarMueble() {
		System.out.println("El mueble pesa " + this.getPeso() + " kg.");
	}

	// mide el mueble
	public void medirMueble() {
		System.out.println("El mueble mide " + this.getAltura() + " cm de alto y " + this.getAncho() + " cm de ancho.");
	}
	
	//crea un mueble nuevo
	public void pintarMueble(String color) {
		setColor
		System.out.println("El mueble ahora es de color "+ this.getPeso() +" kg.");
	}
}
